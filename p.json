{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "mcp-fullstack",
  "version": "1.0.0",
  "description": "Full-stack MCP application with Next.js frontend and Python backend",
  "scripts": {
    "docker:upbuild": "docker compose up --build",
    "docker:downvolumes": "docker compose down --volumes",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "install:all": "npm install && cd frontend && npm install",
    "dev": "concurrently \"npm run python:run\" \"cd frontend && npm run dev\"",
    "build": "cd frontend && npm run build",
    "lint": "cd frontend && npm run lint",
    "type-check": "cd frontend && npm run type-check"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend"
  ]
}
